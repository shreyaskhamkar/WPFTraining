<Window x:Class="CheckBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Pizza Topings</Label>
        <CheckBox Name="cbAllToping" 
                  IsThreeState="True"
                  Checked="cbAllCheckedChanged" 
                  Unchecked="cbAllCheckedChanged">Add all</CheckBox>
        <StackPanel Margin="10">
            <CheckBox Name="cbSalami" Checked="cbSingleChekedChnaged" Unchecked="cbSingleChekedChnaged">
                <TextBlock>
                    Salami<Run Foreground="Red" FontWeight="Bold">Spicy</Run>
                </TextBlock>
            </CheckBox>
            <CheckBox Name="cbMushroom" Checked="cbSingleChekedChnaged" Unchecked="cbSingleChekedChnaged">Mushrooms</CheckBox>
            <CheckBox Name="cbMozzarela" Checked="cbSingleChekedChnaged" Unchecked="cbSingleChekedChnaged">Mozzarela</CheckBox>
           
            
        </StackPanel>
        
        </StackPanel>
</Window>
